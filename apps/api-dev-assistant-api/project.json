{
  "name": "api-dev-assistant-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api-dev-assistant-api/src",
  "projectType": "application",
  "tags": ["api", "grpc", "mcp-client", "langchain"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/api-dev-assistant-api"],
      "options": {
        "command": "npx vite build --config apps/api-dev-assistant-api/vite.config.mts"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx ts-node --project apps/api-dev-assistant-api/tsconfig.app.json -r tsconfig-paths/register apps/api-dev-assistant-api/src/main.ts"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/apps/api-dev-assistant-api"]
    }
  }
}
